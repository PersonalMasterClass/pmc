<% if @bookings.present? %>
  <table class = "table table-bordered" id='bookings_table'>
    <thead>
      <tr>
        <th>School</th>
        <th>Contact Name</th>
        <th>Subject</th>
        <th>Presenter</th>
        <th>Shared</th>
        <th>Date</th>
        <th>Time</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |b| %>
        <tr> 
          <td><%= link_to b.creator.school_info.school_name, school_info_path(b.creator.school_info) %></td>
          <td><%= link_to "#{b.creator.first_name} #{b.creator.last_name}", customer_path(b.creator) %></td>
          <td><%= b.subject.name %> </td>
          <td><%= chosen_presenter(b) %></td>
          <td><%= shared_message(b) %></td> 
          <td> <%= b.booking_date.strftime("%d/%m/%Y") %> </td>
          <td> <%= b.booking_date.strftime("%H:%M %p") %> - <%= duration(b) %></td>
          <td> <%= b.status_message %> </td>
          <td> <%= link_to "View", booking_path(b), class: "btn btn-primary" %> </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
<% end %>