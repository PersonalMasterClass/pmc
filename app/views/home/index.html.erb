<% content_for :body_attributes do 'class=no-container-bg landing-page-background' end %>
<div class="landing-page-sections">
  <section id="leader">
    <div class="container no-bg">
      <div class="section-content">
        <h1>VCE Revision Sessions</h1>
        <h2>Via the Internet</h2>
        <p>Live. Interactive. Convenient.</p>
        <a class="btn btn-pmcred push-transition">START YOUR FREE SEARCH NOW</a><br>
        <%= link_to "Become a Presenter", registration_presenters_path, class: "underbutton" %>
      </div>
    </div>
  </section>
  <section id="subject-tiles">
    <div class="container no-bg">
      <div class="section-content container no-bg">
        <h1>Which VCE subject do you need revision in?</h1>
        <div class="tile-wrap">
          <div class="tile-row">
            <div class="tile">Chemistry</div>
            <div class="tile">Business Management</div>
            <div class="tile">English</div>
          </div>
          <div class="tile-row">
            <div class="tile">Physics</div>
            <div class="tile">Legal Studies</div>
            <div class="tile">French</div>
          </div>
        </div>
        <p class="after-tile-callout">
          <a class="btn btn-pmcred push-transition">FIND MORE SESSIONS</a><br>
          <i class="underbutton">on virtually any subject!</i>
        </p>
      </div>
    </div>
  </section>
</div>
<div class="fixed-background"></div>
