<h2>Presenter Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_presenters_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

 <%= fields_for :school_info do |school_info_fields| %>
    <div class="form-group">
    <%= f.label "School" %>
    <%= school_info_fields.text_field :school_name, class: "form-control", :id=>"school_search" %>
  </div>
<% end %>

  <%= fields_for :presenter do |presenter_fields| %>
    <div class="form-group">
      <%= presenter_fields.label :first_name %><br />
      <%= presenter_fields.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= presenter_fields.label :last_name %><br />
      <%= presenter_fields.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= presenter_fields.label :phone_number %><br />
      <%= presenter_fields.text_field :phone_number, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= presenter_fields.label :vit_number %><br />
      <%= presenter_fields.text_field :vit_number, autofocus: true, class: "form-control" %>
    </div>

    <!-- maybe add abn later -->
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
