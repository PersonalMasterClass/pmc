<h4>Bookings Requiring Help (<%= @help_count %>)</h4>
<% if @help_bookings.present? %>
  
  <table class = "table table-bordered">
    <tr>
      <th>School</th>
      <th>Subject</th>
      <th>Action</th>
    </tr>
    <% @help_bookings.each do |b| %>
      <tr> 
        <td> <%= b.creator.school_info.school_name %> </td>
        <td> <%= b.subject.name %> </td>
        <td> <%= link_to "View", booking_path(b), class: "btn btn-info" %> </td>
      </tr>  
    <% end %>
  </table>
  
  <%= link_to "See all", bookings_path, class: "btn btn-primary" %>
    
 
<% end %>